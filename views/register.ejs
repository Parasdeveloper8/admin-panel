<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        #button {
            width: 80px;
            height: 30px;
            border: 1px solid black;
        }
        #button:disabled {
            border: 1px solid grey;
        }
    </style>
</head>
<body>
    <header>
        <p>Register</p>
    </header>
    <main>
        <!-- Ensure the form action is properly pointing to the correct POST route -->
        <form action="/regis" method="post">
            <label for="name">Enter your Name</label>
            <input type="text" id="name" name="name" required placeholder="John Doe"/>

            <label for="email">Enter your Email</label>
            <input type="email" id="email" name="email" required placeholder="xyz@gmail.com"/>

            <label for="password">Create your Password</label>
            <input type="password" id="password" name="password"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{8,}"
            title="Must contain at least 8 characters, including uppercase, lowercase, number, and special character" required/>

            <label for="confirmpass">Confirm Password</label>
            <input type="password" id="confirmpass" name="confirm" required
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\W_]).{8,}"
            title="This should be the same as the above password you entered"/>

            <input type="submit" value="Submit" id="button" disabled onmouseover="checkPass()"/>
        </form>
    </main>
    <footer>
        <p>Your details are safe with us and will not be shared by us</p>
    </footer>
    <script>
        const checkPass = () => {
            let button = document.getElementById("button");
            let password = document.getElementById("password");
            let confirmpassword = document.getElementById("confirmpass");

            if (password.value === confirmpassword.value) {
                button.disabled = false;
            } else {
                button.disabled = true;
                button.title = "Enter correct password to go ahead";
            }
        }
    </script>
</body>
</html>
